<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/iv_list_item_icon"
        android:layout_width="@dimen/list_item_icon_size"
        android:layout_height="@dimen/list_item_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/drawable_null"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/tv_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_list_item_icon"
        android:text="Item_name"
        android:textSize="@dimen/list_item_title_size"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/iv_list_item_symbol_new"
        android:layout_width="@dimen/list_item_icon_new_size"
        android:layout_height="@dimen/list_item_icon_new_size"
        android:layout_toRightOf="@id/tv_list_item_name"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/new_icon"/>

</RelativeLayout>