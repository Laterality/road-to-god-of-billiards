<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_gray"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/default_user_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_team_member_list_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="#fff"
                    android:layout_marginRight="8dp"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/iv_team_member_leader_mark"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/team_leader_icon"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_team_member_list_tier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="[user tier]"
                android:textSize="17sp"
                android:textColor="@color/profile_tier_textColor"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="최근 접속일 : "
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/tv_my_team_member_list_last_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="last access date"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#fff"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>