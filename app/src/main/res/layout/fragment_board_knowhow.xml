<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@color/colorPrimaryDark"
              android:orientation="vertical"
              android:scrollbars="none">


    <FrameLayout
        android:id="@+id/fl_knowhow_board_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"/>



    <LinearLayout
        android:id="@+id/ll_knowhow_board_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_knowhow_board_tabwidget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/board_knowhow_tabwidget_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_knowhow_board_tab_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/background_board_pop"
                android:gravity="center"
                android:text="인기"
                android:textColor="#fff"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn_knowhow_board_tab_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/background_board_lat"
                android:gravity="center"
                android:text="최신"
                android:textColor="#fff"
                android:textSize="25sp"/>

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_knowhow_board_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </android.support.v4.view.ViewPager>
    </LinearLayout>


</LinearLayout>