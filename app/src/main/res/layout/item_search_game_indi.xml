<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_search_game_indi"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_search_game_indi_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="username"
                android:textColor="#000"/>

            <View
                style="?android:attr/dividerVertical"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#000"/>

            <TextView
                android:id="@+id/tv_search_game_indi_tier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_tier"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_search_game_indi_rank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="user_rank"
                android:textColor="#ff0000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_search_game_indi_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="user_rate"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_search_game_indi_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="user_avg"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_search_game_indi_hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="user_hi"
                android:textColor="#000"/>

        </LinearLayout>


        <TextView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="대전신청"
            android:textColor="#000"
            android:layout_below="@+id/linearLayout"
            android:background="@color/colorDivider2"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>