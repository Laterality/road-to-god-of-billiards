<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_my_team_function_popup"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/custom_gray"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_team_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="190dp"
                android:layout_marginLeft="8dp"
                android:textSize="30sp"
                android:textColor="@color/background_search_game_team"
                android:text="team_name"/>

            <TextView
                android:id="@+id/tv_my_team_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="team_description"
                android:textColor="#fff"
                android:textSize="17sp"/>

            </LinearLayout>


        <ImageButton
            android:id="@+id/ibtn_my_team_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/custom_gray"
            android:src="@drawable/plus_icon"/>

    </LinearLayout>

    <View
        style="?android:attr/dividerHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#fff"/>

    <ListView
        android:id="@+id/lv_my_team_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/testing_memeber"
        android:background="@color/custom_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀 전적"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="250dp"
            android:textColor="#fff"
            android:textSize="25sp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/custom_gray"
            android:src="@drawable/plus_icon"/>

    </LinearLayout>

    <com.primitive.road_to_god_of_billiard.views.RatingView_Bar
        android:id="@+id/rv_my_team_rating"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical|left"
        android:padding="8dp"
        android:paddingLeft="12dp"
        android:textSize="18sp"/>

</LinearLayout>