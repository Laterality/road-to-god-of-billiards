<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/custom_gray"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_establishing_team_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/background_search_game_team"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_establish_team_cancel"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:text="취소"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="팀개설"
                    android:textColor="#fff"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btn_establish_team_ok"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#fff"
                    android:text="확인"/>

            </LinearLayout>

            <EditText
                android:id="@+id/et_establish_team_name"
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:background="#fff"
                android:hint="팀 이름을 입력해 주세요."
                android:paddingLeft="35dp"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btn_establish_team_check"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/background_search_game_indi"
                android:text="중복검사"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/tv_establish_team_reiteration_warning"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="중복되는 팀 이름입니다!"
                android:textColor="#f00"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_establish_team_invited_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="&#60;팀원&#62;"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_establish_team_invited_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_establish_team_min_member_warning"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:text="팀을 개설하려면\n2명 이상의 팀원이 필요합니다"
                android:textColor="#f00"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_establish_team_invite"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/background_search_game_indi"
                android:text="친구 초대하기"
                android:textColor="#fff"
                android:textSize="20sp"/>

        </LinearLayout>

    </ScrollView>


    <FrameLayout
        android:id="@+id/fl_establishing_team_invitation_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"/>

</LinearLayout>